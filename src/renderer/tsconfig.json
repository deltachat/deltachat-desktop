{
  "compilerOptions": {
    "outDir": "../../tsc-dist/renderer",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "references": [
    {
      "path": "../shared/tsconfig.json"
    }
  ]
}
