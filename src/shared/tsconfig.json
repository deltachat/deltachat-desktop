{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "../../tsc-dist/shared",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./**/*.ts", "./**/*.js"]
}
