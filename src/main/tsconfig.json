{
  "compilerOptions": {
    "outDir": "../../tsc-dist/main",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "rootDir": ".",
    "allowJs": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "references": [
    {
      "path": "../shared/tsconfig.json"
    }
  ]
}
