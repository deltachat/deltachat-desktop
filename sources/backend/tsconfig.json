{
  "compilerOptions": {
      "outDir": "../../dist/backend/",
      "rootDir": ".",
    
      // Compile for node/electron main process
      "module": "commonjs",
      "target": "es6",

      // Enable source maps for debugging  
      "sourceMap": true,
      "sourceRoot": "../../dist/backend/",
      "inlineSources": true,
  
      // Incremental builds
      "composite": true,
      "incremental": true,
      "tsBuildInfoFile": "../../dist/backend/.tsbuildinfo",

      "allowJs": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
        
  },
  "references": [
      {
          "path": "../shared/tsconfig.json"
      }
  ]
}