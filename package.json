{
  "name": "deltachat-desktop",
  "version": "1.2.3",
  "description": "Desktop Application for delta.chat",
  "main": "index.js",
  "scripts": {
    "watch": "npm run watch-build & npm run watch-electron",
    "watch-build": "nodemon -w src/ -e js -x \"npm run build\"",
    "watch-electron": "nodemon -w src/ -e js -w _locales -e json -i src/renderer/ -x \"npm run dev\"",
    "test": "standard",
    "test-integration": "npm run build && node ./test",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=onTagOrDraft",
    "dev": "electron reload.js --debug --disable-http-cache",
    "build": "buble src --output es5"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deltachat/deltachat-desktop.git"
  },
  "keywords": [
    "deltachat",
    "email",
    "messaging",
    "desktop"
  ],
  "author": {
    "name": "DeltaChat Developers",
    "email": "delta-systems@codespeak.net"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/deltachat/deltachat-desktop/issues"
  },
  "engines": {
    "node": ">=10.7.0"
  },
  "productName": "Delta.Chat",
  "homepage": "https://delta.chat",
  "dependencies": {
    "@blueprintjs/core": "^3.4.0",
    "application-config": "^1.0.1",
    "conversations": "^2.0.2",
    "debounce": "^1.2.0",
    "deltachat-node": "^0.18.0",
    "insert-css": "^2.0.0",
    "intl-tel-input": "^14.0.1",
    "lodash.merge": "^4.6.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-intl": "^2.4.0",
    "run-parallel": "^1.1.9",
    "run-series": "^1.1.8"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "buble": "^0.19.3",
    "cp-file": "^6.0.0",
    "depcheck": "^0.6.11",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.3",
    "electron-reload": "^1.2.5",
    "nodemon": "^1.18.3",
    "pngjs": "^3.3.3",
    "rimraf": "^2.6.2",
    "spectron": "^4.0.0",
    "standard": "^12.0.0",
    "tape": "^4.9.1"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "build": {
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appId": "com.deltachat.desktop",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "files": [
      "!node_modules/deltachat-node/deltachat-core${/*}"
    ]
  }
}
