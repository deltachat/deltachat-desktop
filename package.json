{
  "name": "deltachat-desktop",
  "version": "2.0.0",
  "description": "Desktop Application for delta.chat",
  "main": "index.js",
  "scripts": {
    "watch": "node bin/watch",
    "test": "standard && node test/unit",
    "test-integration": "node test/integration",
    "start": "npm run build && electron . --debug --disable-http-cache",
    "pack": "npm run build && electron-builder --dir",
    "dist": "version-unchanged || electron-builder --publish=onTagOrDraft",
    "build": "npm run build-conversations && npm run build-js",
    "build-conversations": "npm run build-conversations-ts && npm run build-conversations-css",
    "build-conversations-ts": "cd conversations && tsc",
    "build-conversations-css": "cd conversations && node-sass stylesheets/manifest.scss build/manifest.css",
    "build-js": "webpack --mode=development --progress --profile --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deltachat/deltachat-desktop.git"
  },
  "keywords": [
    "deltachat",
    "email",
    "messaging",
    "desktop"
  ],
  "author": {
    "name": "DeltaChat Developers",
    "email": "delta-systems@codespeak.net"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/deltachat/deltachat-desktop/issues"
  },
  "engines": {
    "node": ">=10.7.0"
  },
  "productName": "DeltaChat",
  "homepage": "https://delta.chat",
  "dependencies": {
    "@blueprintjs/core": "^3.4.0",
    "@sindresorhus/is": "^0.13.0",
    "application-config": "^1.0.1",
    "array-differ": "^2.0.3",
    "class-autobind": "^0.1.4",
    "debounce": "^1.2.0",
    "deltachat-emoji": "^1.0.0",
    "deltachat-node": "^0.27.0",
    "emoji-js-clean": "^4.0.0",
    "filesize": "^3.6.1",
    "google-libphonenumber": "^3.1.15",
    "insert-css": "^2.0.0",
    "intl-tel-input": "^14.0.1",
    "linkify-it": "^2.1.0",
    "lodash": "^4.17.11",
    "lodash.merge": "^4.6.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "react": "^16.4.2",
    "react-contextmenu": "^2.9.4",
    "react-dom": "^16.4.2",
    "react-intl": "^2.4.0",
    "react-qr-svg": "^2.1.0",
    "run-parallel": "^1.1.9",
    "run-series": "^1.1.8",
    "styled-components": "^4.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/classnames": "^2.2.6",
    "@types/filesize": "^3.6.0",
    "@types/google-libphonenumber": "^7.4.17",
    "@types/jquery": "^3.3.19",
    "@types/linkify-it": "^2.0.3",
    "@types/lodash": "^4.14.117",
    "@types/mocha": "^5.2.5",
    "@types/qs": "^6.5.1",
    "@types/react": "^16.4.18",
    "@types/semver": "^5.5.0",
    "@types/sinon": "^5.0.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "buble": "^0.19.3",
    "chai": "^4.2.0",
    "cp-file": "^6.0.0",
    "depcheck": "^0.6.11",
    "electron": "^2.0.12",
    "electron-builder": "^20.28.3",
    "glob-watcher": "^5.0.1",
    "node-sass": "^4.9.4",
    "pngjs": "^3.3.3",
    "rimraf": "^2.6.2",
    "sinon": "^7.0.0",
    "spectron": "^5.0.0",
    "standard": "^12.0.0",
    "tape": "^4.9.1",
    "tempy": "^0.2.1",
    "typescript": "^3.1.3",
    "version-changed": "^1.1.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-node-externals": "^1.7.2"
  },
  "build": {
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appId": "com.deltachat.desktop",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "files": [
      "!node_modules/deltachat-node/deltachat-core${/*}"
    ]
  }
}
