{
  "name": "deltachat-desktop",
  "version": "1.0.9",
  "description": "Desktop Application for delta.chat",
  "main": "index.js",
  "scripts": {
    "build": "buble src --output build",
    "test": "standard",
    "test-integration": "npm run build && node ./test",
    "watch": "nodemon --exec \"npm run start\" --ext js,css --ignore build/ --ignore dist/",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=onTagOrDraft",
    "dev": "npm run build && electron . --debug --disable-http-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deltachat/deltachat-desktop.git"
  },
  "keywords": [
    "deltachat",
    "email",
    "messaging",
    "desktop"
  ],
  "author": {
    "name": "DeltaChat Developers",
    "email": "delta-systems@codespeak.net"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/deltachat/deltachat-desktop/issues"
  },
  "engines": {
    "node": ">=10.7.0"
  },
  "productName": "Delta.Chat",
  "homepage": "https://delta.chat",
  "dependencies": {
    "@blueprintjs/core": "^3.4.0",
    "application-config": "^1.0.1",
    "arch": "^2.1.1",
    "conversations": "^1.2.0",
    "debounce": "^1.2.0",
    "deltachat-node": "^0.16.0",
    "emoji-panel": "^0.5.2",
    "insert-css": "^2.0.0",
    "intl-tel-input": "^13.0.3",
    "lodash.merge": "^4.6.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-intl": "^2.4.0",
    "run-parallel": "^1.1.9"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "buble": "^0.19.3",
    "depcheck": "^0.6.11",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.3",
    "nodemon": "^1.18.3",
    "standard": "^12.0.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "build": {
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "static/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appId": "com.deltachat.desktop",
    "directories": {
      "buildResources": "src"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "./static/deltachat.png"
    }
  }
}
