{
  "name": "deltachat-desktop",
  "version": "1.0.0",
  "description": "Desktop Application for delta.chat",
  "main": "index.js",
  "scripts": {
    "build": "buble src --output build",
    "test": "standard && depcheck --ignores=buble,nodemon,gh-release --ignore-dirs=build,dist",
    "test-integration": "npm run build && node ./test",
    "watch": "nodemon --exec \"npm run start\" --ext js,css --ignore build/ --ignore dist/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --debug --disable-http-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deltachat/deltachat-desktop.git"
  },
  "keywords": [
    "deltachat",
    "email",
    "messaging",
    "desktop"
  ],
  "author": "Karissa McKelvey",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/deltachat/deltachat-desktop/issues"
  },
  "engines": {
    "node": ">=10.7.0"
  },
  "productName": "Delta.Chat",
  "homepage": "https://delta.chat",
  "dependencies": {
    "application-config": "^1.0.1",
    "arch": "^2.1.1",
    "debounce": "^1.2.0",
    "deltachat-node": "^0.6.0",
    "location-history": "^1.1.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-intl": "^2.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "buble": "^0.19.3",
    "electron": "^2.0.7",
    "electron-packager": "^12.1.1",
    "nodemon": "^1.18.3",
    "standard": "^11.0.1",
    "tape": "^4.9.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
