{
  "compilerOptions": {
    "outDir": "tsc-dist/main",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "es2018",
    "rootDirs": [".", "../shared"],
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["./**/*.ts", "./**/*.js"]
}
